/**app.wxss**/

page {
  height: 100%;
  font-family: MicroSoft Yahei;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

text {
  font-family: MicroSoft Yahei;
}

.button-have {
  color: #fff;
  margin: 0 auto;
  font-size: 40rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: linear-gradient(166deg, #fd6138, #fe2754);
  border-radius: 50rpx;
  width: 320rpx;
}
.button-nohave, .button-nohave-ios {
  color: #38454e;
  font-size: 40rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 50rpx;
  overflow: initial;
  position: relative;
  height: 84rpx;
  line-height: 84rpx;
  width: 312rpx;
  background-clip: padding-box;
}
.button-nohave::after, .button-nohave-ios::after{
  position: absolute;
  background: linear-gradient(166deg, #fd6138, #fe2754);
  content: '';
  z-index: -1;
  border-radius: 50rpx;
  width: 320rpx;
  height: 92rpx;
  transform: scale(1);
}
.button-nohave::after {
  top: -4rpx;
  left: -4rpx;
}
.button-nohave-ios::after {
  top: -2rpx;
  left: -2rpx;
}

.operation-button {
  width: 100%;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 40rpx;
  z-index: 1000;
}

.button-have, .button-nohave, .button-nohave-ios{
  flex: none;
  text-align: center;
}