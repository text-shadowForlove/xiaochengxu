/* pages/index/preview/redMoneySituation/redMoneySituation.wxss */
page{
  background-color: #F5EFEF;
  opacity: 100%
}
.dot {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.situation{
  width: 750rpx;
}
.situation .situation-top{
  position: relative;
  height: 300rpx;
}
.situation .situation-top image.situation-top-img{
  width: 100%;
  height: 300rpx;
}
.situation .situation-top .sender-img{
  position: absolute;
  height: 146rpx;
  width: 146rpx;
  top: 36rpx;
  left: 308rpx;
  border-radius: 50%;
}
.situation .situation-top .name-fighting{
  width: 100%;
  position: absolute;
  left: 0;
  top: 208rpx;
  text-align: center;
}
.situation .situation-top .sender-name{
  display: inline-block;
  max-width: 320rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.situation .situation-top .fightingImg{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-bottom: -2rpx;
}
.situation .envelope-total{
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #000;
  text-align: center
}
.situation .envelope-number{
  font-size: 72rpx;
  color: #000;
  text-align: center;
  font-weight: bold;
  margin-bottom: 36rpx;
}
.situation .yuan{
  margin-left: 24rpx;
  color: #000;
  font-size: 24rpx;
  font-weight: normal;
  margin-bottom: 10rpx;
}
.situation .geterList{
  width: 100%;
  background-color: #fff;
  font-size: 24rpx;
}
.situation .geterList .envelope-count{
  height: 72rpx;
  padding-left: 30rpx;
  line-height: 72rpx;
  color: #8d8d8d;
  border-bottom: #F5EFEF 2rpx solid
}
.situation .geterList .geterInfo{
  width: 100%;
  height: 120rpx;
  border-bottom: #F5EFEF 1rpx solid
}
.situation .geterList .geterInfo .geterImg{
  float: left;
  width: 72rpx;
  height: 72rpx;
  border-radius: 8rpx;
  margin: 24rpx 30rpx;
}
.situation .geterList .geterInfo .name-time{
  float: left;
}
.situation .geterList .geterInfo .name-time .name{
  margin-top: 20rpx;
  color: #000
}
.situation .geterList .geterInfo .name-time .time{
  margin-top: 12rpx;
  color: #8d8d8d
}
.money-number{
  float: right;
  margin-top: 24rpx;
  margin-right: 30rpx;
}