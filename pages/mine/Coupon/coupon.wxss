/* pages/mine/Coupon/coupon.wxss */

page {
    width: 100%;
    background: #f5efef;
}

.page-container {
    margin-top: 36rpx;
    width: 100%;
    height: 322rpx;
    padding-top: 68rpx;
    font-size: 36rpx;
    color: #fff;
    background: #ffffff;
    position: relative;
}

.coupon-explain {
    width: 616rpx;
    height: 250rpx;
    border-radius: 8rpx;
    margin-left: 42rpx;
    padding-left: 50rpx;
    letter-spacing: 7rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
    background: linear-gradient(to top, #ff294a, #fb7e37);
}

.voucher {
    overflow: hidden;
}

.voucher text {
    float: left;
    margin-right: 14rpx;
    letter-spacing: 0rpx;
}

.voucher .voucher-money {
    font-size: 46rpx;
    line-height: 46rpx;
}

.voucher .voucher-text {
    font-size: 28rpx;
    line-height: 50rpx;
}

.go-use {
    width: 160rpx;
    height: 50rpx;
    border: 1px solid #fff;
    border-radius: 25rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    letter-spacing: 3rpx;
}

.count {
    margin-left: 42rpx;
    color: #444d5c;
    font-size: 24rpx;
    line-height: 72rpx;
}

image {
    width: 271rpx;
    height: 294rpx;
    position: absolute;
    top: 42rpx;
    right: 50rpx;
}