@import './cardTemplate/cardTemplate.wxss';
page {
  width: 100%;
  background-color: #F5EFEF;
}

.page-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 36rpx;
  margin-bottom: 14rpx;
}

.user image {
  width: 146rpx;
  height: 146rpx;
  border-radius: 50%;
}

.user .userName {
  line-height: 76rpx;
  font-size: 32rpx;
}

.Cards {
  background-color: #fff;
  width: 630rpx;
  height: 240rpx;
  padding: 18rpx 30rpx 0rpx;
  margin-bottom: 36rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.card-type {
  width: 100%;
}

.count {
  margin-left: 12rpx;
}

.card-container {
  width: 100%;
}

.nocard-container {
  text-align: center;
}

.nocard {
  line-height: 150rpx;
  font-size: 28rpx;
  color: #000;
  opacity: 0.4;
}

.Cards .card-container .card-details {
  margin-top: 0;
  padding: 24rpx 0rpx;
}